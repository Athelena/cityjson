{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "CityJSON geometry templates schema v0.6",
  
  "GeometryInstance": {
    "type": "object",
    "properties": {
      "type": { "enum": ["GeometryInstance"] },
      "template": {"type": "string"},
      "referencePoint": {"$ref": "geomprimitives.json#/MultiPoint"},
      "transformationMatrix": {
        "type": "array",
        "items": { "type": "number" },
        "minItems": 16,    
        "maxItems": 16          
      }
    },
    "required": ["type", "template", "referencePoint", "transformationMatrix"],
    "additionalProperties": false
  }

}