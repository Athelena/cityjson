{
  "type": "CityJSON extension",
  "name": "Noise",
  "version": "0.1",
  "description": "Extension to model the noise, innit?",

  "extraRootProperties": {

    "+metadata2": {
      "type": "object",
      "properties": {
        "un": { "type": "integer"},
        "deux": { "type": "integer"},
        "trois": { "type": "integer"}
      },
      "required": ["un", "deux", "trois"],
      "additionalProperties": false
    }
  
  },

   
  "extraAttributes": {
    
    "Building": {
      "colour": {
        "type": "object",
        "properties": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "rgba": {
                "type": "array",
                "items": {"type": "number"},
                "minItems": 4,    
                "maxItems": 4
              },
              "hex": {"type": "string"}
            },
            "additionalProperties": false
          }
        }
      }
    }

  },


  "extraCityObjects": {

    "+NoiseBuilding": {
      "allOf": [
        { "$ref": "../cityobjects.json#/_AbstractCityObject"},
        { "$ref": "../cityobjects.json#/_AbstractBuilding" },
        {
          "properties": {
            "type": { "enum": ["+NoiseBuilding"] },
            "attributes": {
              "properties": {
                "buildingLDenMin": {"type": "number"}
              }
            }
          },
          "required": ["type"]
        }
      ]
    }

  }


}
 